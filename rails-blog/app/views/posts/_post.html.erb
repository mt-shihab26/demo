<div id="<%= dom_id post %>" class="space-y-4">
  <div>
    <h2 class="text-2xl font-bold text-gray-900 mb-2">
      <%= post.title %>
    </h2>
  </div>

  <div class="prose prose-blue max-w-none text-gray-700">
    <%= post.body %>
  </div>

  <div class="flex items-center text-sm text-gray-500 pt-2">
    <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
    </svg>
    Last updated <%= time_tag post.updated_at, "data-local": "time", "data-format": "%B %e %Y at %l:%M%P" %>
  </div>
</div>
