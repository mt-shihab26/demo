<% content_for :title, "Editing post" %>

<div class="max-w-4xl mx-auto">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center gap-4 mb-4">
      <%= link_to @post, class: "inline-flex items-center text-gray-600 hover:text-gray-900 transition-colors" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Back to post
      <% end %>
      <span class="text-gray-400">|</span>
      <%= link_to "All posts", posts_path, class: "text-gray-600 hover:text-gray-900 transition-colors" %>
    </div>

    <h1 class="text-4xl font-bold text-gray-900 mb-2">Edit Post</h1>
    <p class="text-gray-600">Make changes to your post</p>
  </div>

  <!-- Form Card -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8">
    <%= render "form", post: @post %>
  </div>
</div>
