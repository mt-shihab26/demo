<% content_for :title, "New post" %>

<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="mb-8">
    <%= link_to posts_path, class: "inline-flex items-center text-gray-600 hover:text-gray-900 transition-colors mb-4" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
      </svg>
      Back to all posts
    <% end %>

    <h1 class="text-4xl font-bold text-gray-900 mb-2">Create New Post</h1>
    <p class="text-gray-600">Share your thoughts with the community</p>
  </div>

  <!-- Form Card -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8">
    <%= render "form", post: @post %>
  </div>
</div>
