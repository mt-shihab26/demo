<%= turbo_stream_from @post %>

<% content_for :title, @post.title %>

<div class="max-w-4xl mx-auto">
  <% if notice.present? %>
    <div class="mb-6 rounded-lg bg-green-50 border border-green-200 p-4" id="notice">
      <div class="flex items-center">
        <svg class="w-5 h-5 text-green-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
        </svg>
        <p class="text-green-700 font-medium"><%= notice %></p>
      </div>
    </div>
  <% end %>

  <div class="mb-6">
    <%= link_to posts_path, class: "inline-flex items-center text-gray-600 hover:text-gray-900 transition-colors" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
      </svg>
      Back to all posts
    <% end %>
  </div>

  <article class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden mb-8">
    <div class="p-8">
      <%= render @post %>
    </div>

    <div class="bg-gray-50 px-8 py-4 border-t border-gray-200">
      <div class="flex flex-wrap gap-3">
        <%= link_to edit_post_path(@post), class: "inline-flex items-center px-4 py-2 rounded-md bg-white border border-gray-300 text-gray-700 hover:bg-gray-50 font-medium transition-colors duration-150" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
          </svg>
          Edit Post
        <% end %>

        <%= button_to @post, method: :delete, form_class: "inline-block", class: "inline-flex items-center px-4 py-2 rounded-md bg-red-600 hover:bg-red-700 text-white font-medium transition-colors duration-150", data: { turbo_confirm: "Are you sure you want to delete this post? This action cannot be undone." } do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
          </svg>
          Delete Post
        <% end %>
      </div>
    </div>
  </article>

  <%= render "comments/comments", post: @post %>
</div>

