<div class="mt-8">
  <!-- Comments Header -->
  <div class="flex items-center justify-between mb-6">
    <div class="flex items-center">
      <svg class="w-6 h-6 text-gray-700 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
      </svg>
      <h2 class="text-2xl font-bold text-gray-900">
        Comments
        <span class="ml-2 text-lg font-normal text-gray-500">(<%= post.comments.count %>)</span>
      </h2>
    </div>
  </div>

  <!-- Comments List -->
  <div id="comments" class="space-y-4 mb-8">
    <% if post.comments.any? %>
      <%= render post.comments %>
    <% else %>
      <div class="text-center py-12 bg-gray-50 rounded-lg border-2 border-dashed border-gray-300">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
        </svg>
        <h3 class="mt-4 text-sm font-medium text-gray-900">No comments yet</h3>
        <p class="mt-1 text-sm text-gray-500">Be the first to share your thoughts!</p>
      </div>
    <% end %>
  </div>

  <!-- New Comment Form -->
  <%= render "comments/new", post: post %>
</div>

