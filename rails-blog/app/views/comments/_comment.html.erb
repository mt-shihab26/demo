<div id="<%= dom_id(comment) %>" data-controller="toggle" class="bg-white rounded-lg border border-gray-200 p-5">
  <div class="flex items-start space-x-4">
    <div class="shrink-0">
      <div class="h-10 w-10 rounded-full bg-linear-to-br from-blue-500 to-blue-600 flex items-center justify-center text-white font-semibold">
        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
        </svg>
      </div>
    </div>
    <div class="flex-1 min-w-0">
      <div class="flex items-center justify-between mb-2">
        <div>
          <p class="text-sm font-semibold text-gray-900">Anonymous User</p>
          <div class="flex items-center text-xs text-gray-500 mt-0.5">
            <svg class="w-3.5 h-3.5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <%= time_tag(comment.updated_at, "data-local": "time-ago") %>
          </div>
        </div>
        <!-- Actions -->
        <div class="flex items-center space-x-2">
          <%= button_to post_comment_path(comment.post, comment), method: :delete,
              data: { turbo_confirm: "Are you sure you want to delete this comment?" },
              class: "text-red-600 hover:text-red-800 hover:bg-red-50 rounded-lg p-2 transition-colors duration-200",
              title: "Delete comment" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
            </svg>
          <% end %>
        </div>
      </div>
      <div class="text-gray-700 text-sm leading-relaxed whitespace-pre-wrap mb-3">
        <%= comment.content %>
      </div>
      <button data-action="click->toggle#reply" data-target="<%= dom_id(comment, :reply_form) %>" class="text-blue-600 hover:text-blue-800 text-xs font-medium flex items-center">
        <svg class="w-3.5 h-3.5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6"/>
        </svg>
        Reply
      </button>
    </div>
  </div>

  <!-- Reply Form (Hidden by default) -->
  <div id="<%= dom_id(comment, :reply_form) %>" class="hidden mt-4 ml-14 bg-gray-50 rounded-lg border border-gray-200 p-4">
    <%= form_with model: [comment.post, Comment.new], local: true, class: "space-y-3" do |form| %>
      <%= form.text_area :content,
          rows: 3,
          placeholder: "Write your reply...",
          required: true,
          class: "w-full rounded-lg border border-gray-300 px-3 py-2 text-sm text-gray-900 placeholder-gray-400 shadow-sm transition-colors focus:ring-2 focus:ring-offset-2 focus:border-blue-500 focus:ring-blue-500 resize-none" %>
      <div class="flex items-center justify-between">
        <%= form.submit "Post Reply", class: "inline-flex items-center px-4 py-2 rounded-lg bg-blue-600 hover:bg-blue-700 text-white text-sm font-semibold shadow-sm transition-colors duration-200 cursor-pointer" %>
        <button type="button" data-action="click->toggle#cancel" data-target="<%= dom_id(comment, :reply_form) %>" class="text-gray-600 hover:text-gray-800 text-sm font-medium">
          Cancel
        </button>
      </div>
    <% end %>
  </div>
</div>
