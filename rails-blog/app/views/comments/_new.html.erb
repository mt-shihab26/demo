<div class="bg-white rounded-lg border border-gray-200 shadow-sm overflow-hidden">
  <!-- Form Header -->
  <div class="bg-linear-to-r from-blue-50 to-indigo-50 px-6 py-4 border-b border-gray-200">
    <div class="flex items-center">
      <svg class="w-5 h-5 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
      </svg>
      <h3 class="text-lg font-semibold text-gray-900">Leave a Comment</h3>
    </div>
    <p class="text-sm text-gray-600 mt-1">Share your thoughts about this post</p>
  </div>

  <!-- Form Body -->
  <div class="p-6">
    <%= form_with model: [ @post, Comment.new ], local: true, class: "space-y-4" do |form| %>
      <div class="space-y-2">
        <%= form.label :content, class: "block text-sm font-semibold text-gray-700" do %>
          Your Comment <span class="text-red-500">*</span>
        <% end %>
        <%= form.text_area :content,
            rows: 4,
            placeholder: "Write your comment here... Be respectful and constructive.",
            required: true,
            class: "w-full rounded-lg border border-gray-300 px-4 py-3 text-gray-900 placeholder-gray-400 shadow-sm transition-colors focus:ring-2 focus:ring-offset-2 focus:border-blue-500 focus:ring-blue-500 resize-none" %>
        <p class="text-xs text-gray-500">Markdown formatting is supported</p>
      </div>

      <div class="flex items-center justify-between pt-2">
        <%= form.submit "Post Comment", class: "inline-flex items-center px-6 py-2.5 rounded-lg bg-blue-600 hover:bg-blue-700 text-white font-semibold shadow-sm transition-colors duration-200 cursor-pointer" %>
        <div class="flex items-center text-xs text-gray-500">
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          Your comment will be posted immediately
        </div>
      </div>
    <% end %>
  </div>
</div>

