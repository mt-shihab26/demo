<div class="mt-6 bg-white p-4 rounded-md border border-gray-200">
  <%= form_with model: [ @post, Comment.new ], local: true do |form| %>
    <div class="mb-4">
      <%= form.label :content, "Your comment:", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_area :content, rows: 5, class: "w-full rounded-md border border-gray-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-gray-400 focus:border-transparent" %>
    </div>
    <%= form.submit "Post Comment", class: "rounded-md px-3.5 py-2.5 bg-gray-900 hover:bg-gray-700 text-white font-medium cursor-pointer" %>
  <% end %>
</div>

