<figure class="attachment attachment--<%= blob.representable? ? "preview" : "file" %> attachment--<%= blob.filename.extension %> my-4! rounded-lg overflow-hidden bg-white">
  <% if blob.representable? %>
    <%= image_tag blob.representation(resize_to_limit: local_assigns[:in_gallery] ? [ 800, 600 ] : [ 1024, 768 ]), class: "w-full h-auto object-cover" %>
  <% end %>
  <figcaption class="attachment__caption text-sm text-gray-600 p-2! bg-gray-50">
    <% if caption = blob.try(:caption) %>
      <%= caption %>
    <% else %>
      <span class="attachment__name font-medium"><%= blob.filename %></span>
      <span class="attachment__size text-gray-500 ml-2"><%= number_to_human_size blob.byte_size %></span>
    <% end %>
  </figcaption>
</figure>
